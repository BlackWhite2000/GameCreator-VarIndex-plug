{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "skipLibCheck": true,
  "files": [
    "lib/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
